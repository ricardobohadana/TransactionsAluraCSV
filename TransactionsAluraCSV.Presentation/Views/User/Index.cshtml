@model TransactionsAluraCSV.Presentation.Models.UserIndexModel

@{
    ViewData["Title"] = "Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    td, th {
        vertical-align: middle !important;
    }
</style>
<div class="card">
    <div class="card-header"></div>
    <div class="card-body">
        <div class="table-container">
            <table class="table is-fullwidth is-striped is-hoverable">
                <thead>
                    <tr>
                        <th>
                            Email
                        </th>
                        <th>
                            Guid
                        </th>
                        <th>
                            Nome
                        </th>
                        <th>
                            <a class="button is-secondary is-light" asp-action="Create">Criar Usuário</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Users) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <a class="button is-light is-warning" href="/User/Edit?id=@item.UserId">Edit</a>
                            <a class="button is-light is-danger" href="/User/Delete?id=@item.UserId">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>

        </div>
    </div>
</div>
