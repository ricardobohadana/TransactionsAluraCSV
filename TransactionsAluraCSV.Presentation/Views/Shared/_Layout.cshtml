@using System.Security.Claims
@{
    string name = @User.Claims.Where(claim => claim.Type == ClaimTypes.GivenName).Select(claim => claim.Value).FirstOrDefault();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alura Transações </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
</head>
<body>
    <header class="container">
        <nav class="navbar" role="navigation" aria-label="main navigation">
            <a class="navbar-item" href="/">
              <i class="fa-solid fa-file-csv fa-3x"></i>
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>

            <div id="navbarBasicExample" class="navbar-menu">
                <div class="navbar-start">
                    <a class="navbar-item" href="/">
                        <i class="fa-solid fa-house"></i>
                        <span class="ml-2">Início</span>
                    </a>

                    <a class="navbar-item" href="/Transaction/Index">
                        <i class="fa-solid fa-money-bill-transfer"></i>
                        <span class="ml-2">Transações</span>
                    </a>
                    <a class="navbar-item" href="/User/Index">
                        <i class="fas fa-user"></i>
                        <span class="ml-2">Usuários</span>
                    </a>
                </div>

                <div class="navbar-end">
                    <div class="navbar-item">
                        <div class="buttons">
                            @if (name == null)
                            {
                                <a class="button is-primary" href="/Account/Register">
                                    <strong>Cadastrar</strong>
                                </a>
                                <a class="button is-light" href="/Account/Login">
                                    Entrar
                                </a>
                            } else
                            {
                                <span>Bem vindo(a), @name</span>
                                <a class="button is-light is-danger ml-2" href="/Account/Logout">
                                    Encerrar Sessão
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="mt-5 container">
        <div class="">
            <section class="mb-3">
                @if(TempData["MensagemErro"] != null)
                {
                    <div class="notification is-danger is-light">
                      <button class="delete"></button>
                      @TempData["MensagemErro"]
                    </div>
                } else if (TempData["MensagemSucesso"] != null)
                {
                    <div class="notification is-success is-light">
                      <button class="delete"></button>
                      @TempData["MensagemSucesso"]
                    </div>
                }
            </section>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/js/script.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
          (document.querySelectorAll('.notification .delete') || []).forEach(($delete) => {
            const $notification = $delete.parentNode;

            $delete.addEventListener('click', () => {
              $notification.parentNode.removeChild($notification);
            });
          });
        });
    </script>
</body>
</html>
