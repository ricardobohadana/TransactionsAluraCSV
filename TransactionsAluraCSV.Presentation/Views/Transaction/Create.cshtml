@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <header class="card-header">
        <h1 class="title is-3 p-5">Autenticação de Usuários</h1>
    </header>
    <div class="card-content">
        @using (Html.BeginForm(FormMethod.Post, new {enctype = "multipart/form-data"})){
            <div class="file is-fullwidth has-name mb-3">
                <label class="file-label">
                    <input class="file-input" type="file" name="File" id="file"/>
                    <span class="file-cta">
                      <span class="file-icon">
                        <i class="fas fa-upload"></i>
                      </span>
                      <span class="file-label" id="file-action">
                        Selecione um arquivo...
                      </span>
                    </span>
                    <span class="file-name is-italic has-text-weight-normal" id="file-path">
                      Insira um arquivo com extensão .csv para cadastrar transações.
                    </span>
                </label>
            </div>
            <div class="card-footer">
                <button class="card-footer-item button is-success" type="submit">Enviar</button>
            </div>
        }
    </div>
</div>
<script>
    document.getElementById("file").onchange = function (e) {
        document.getElementById("file-action").innerHTML = "Arquivo selecionado!";
        document.getElementById("file-path").innerHTML = this.value;
    };
</script>



